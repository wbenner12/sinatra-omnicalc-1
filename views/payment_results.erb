<h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @the_r.to_fs(:percentage, { :precision => 4}) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @the_n / 12 %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @the_pv.to_fs(:currency, { :precision => 2}) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @the_result.to_fs(:currency, { :precision => 2}) %>
  </dd>


</dl>

<a href="/payment/new">
  Calculate another payment
</a>
